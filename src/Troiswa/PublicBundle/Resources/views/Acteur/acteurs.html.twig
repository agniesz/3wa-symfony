{% extends 'TroiswaPublicBundle::layout.html.twig' %}

{% block title %} 

    Acteurs {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Les acteurs
                    <small>A l'affiche cette semaine</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="{{ path('troiswa_public_homepage') }}">Page d'acceuil</a>
                    </li>
                    <li class="active"><a href="{{ path('troiswa_public_films') }}">Films</a></li>
                </ol>
            </div>

        </div>


    {% for acteur in actrices %}

        <div class="row">

            <div class="col-md-7">
                <a href=" ">
                    <img class="img-responsive" src="{{ asset(acteur.webPath) }}" height= "600" width="600">
                </a>
            </div>



            <div class="col-md-5">
                <h3> {{ acteur.nom }} {{ acteur.prenom }} </h3>
                <h4> {{ acteur.getGender }}</h4>
                <h4> {{ acteur.getAge }} ans </h4>
                <p> {{ acteur.bigraphie }}</p>
                <a class="btn btn-primary" href="{{ path('troiswa_public_unActeur',{'id':acteur.id}) }}">Plus... <i class="fa fa-angle-right"></i></a>
            </div>

        </div>

    {% endfor %}

        <hr>
  

        <div class="row text-center">

            <div class="col-lg-12">
                <ul class="pagination">
                    <li><a href="#">&laquo;</a>
                    </li>
                    <li class="active"><a href="#">1</a>
                    </li>
                    <li><a href="#">2</a>
                    </li>
                    <li><a href="#">3</a>
                    </li>
                    <li><a href="#">4</a>
                    </li>
                    <li><a href="#">5</a>
                    </li>
                    <li><a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>

        </div>

    </div>

    {% endblock %}


